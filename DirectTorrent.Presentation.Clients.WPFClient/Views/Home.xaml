<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DirectTorrent.Presentation.Clients.WPFClient.Views" xmlns:ViewModels="clr-namespace:DirectTorrent.Presentation.Clients.WPFClient.ViewModels" x:Name="userControl" x:Class="DirectTorrent.Presentation.Clients.WPFClient.Views.Home" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Width="900" Height="500">
    <UserControl.DataContext>
        <ViewModels:HomeViewModel/>
    </UserControl.DataContext>
    <Grid x:Name="grid" Style="{StaticResource ContentRoot}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0" Content="Button1"/>
        <ScrollViewer Grid.Column="1">
            <ItemsControl ItemsSource="{Binding listaFilmova, Mode=OneWay}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1" BorderBrush="Aqua">
                            <StackPanel Orientation="Vertical" >
                                <Image Source="{Binding Image}" Height="200" Stretch="Uniform"/>
                                <TextBlock Text="{Binding Name}"/>
                                <TextBlock Text="{Binding Year}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="135" ItemHeight="235" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
        <!--<WrapPanel Grid.Column="1" >
            <Border BorderThickness="1" BorderBrush="Aqua">
                <StackPanel Orientation="Vertical" >
                    <Image Source="test.JPG" Height="200" Stretch="Uniform"/>
                    <TextBlock>A</TextBlock>
                    <TextBlock>B</TextBlock>
                </StackPanel>
            </Border>
            <Button Content="Button1"/>
            <Button Content="Button1"/>
            <Button Content="Button1"/>
        </WrapPanel>-->
    </Grid>
</UserControl>
